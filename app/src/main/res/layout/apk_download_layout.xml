<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#00ffffff"
    >

    <LinearLayout
        android:id="@+id/download"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff333333"
        android:orientation="vertical">
        <RelativeLayout
            android:background="@color/white"
            android:layout_gravity="center"
            android:layout_width="100dp"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="fitCenter"
                android:src="@drawable/lyonhsu3_t"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />
            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_marginTop="16dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:progressDrawable="@drawable/apk_progress_bar" />

        </RelativeLayout>

        <TextView
            android:id="@+id/msg_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="downloading....."
            android:textColor="#fff" />
        <TextView
            android:id="@+id/size_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="downloading....."
            android:textColor="#fff" />
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="downloading....."
            android:textColor="#fff" />
        <TextView
            android:id="@+id/time_text"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="downloading....."
            android:textColor="#fff" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="downloading....."
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/dialog_button_agree"
                android:layout_width="@dimen/alert_agree_btn_W"
                android:layout_height="@dimen/alert_agree_btnn_H"
                android:layout_marginStart="16dp"
                android:layout_weight="1"
                android:background="@drawable/btn_circle_blue"
                android:text="@string/insstall"
                android:visibility="gone"
                android:gravity="center"
                android:textColor="@drawable/aleart_txt_white" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="16dp"
                android:background="@android:color/darker_gray" />

            <Button
                android:id="@+id/dialog_button_back"
                android:layout_width="@dimen/alert_agree_btn_W"
                android:layout_height="@dimen/alert_agree_btnn_H"
                android:layout_marginEnd="16dp"
                android:layout_weight="1"
                android:background="@drawable/btn_circle_blue"
                android:text="@string/cancel"
                android:gravity="center"
                android:textColor="@drawable/aleart_txt_white" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>